// @TODO: YOUR CODE HERE!


let svgWidth = 960;
let svgHeight = 660;

// Define the chart's chartMargins as an object
let chartMargin = {
  top: 30,
  right: 30,
  bottom: 30,
  left: 10
};

let chartWidth = svgWidth - chartMargin.left - chartMargin.right;
let chartHeight = svgHeight - chartMargin.top - chartMargin.bottom;

let svg = d3.select("#scatter").append("svg").attr("height", svgHeight).attr("width", svgWidth)

let chartGroup = svg.append("g")
  .attr("transform", `translate(${chartMargin.left}, ${chartMargin.top})`);

// Add X axis
var x = d3.scaleLinear()
    .domain([20, 40])
    .range([ chartMargin.left, chartWidth - chartMargin.right]);
  svg.append("g")
    .text("Obesity")
    .attr("transform", "translate(0," + chartHeight + ")")
    .call(d3.axisBottom(x));

  // Add Y axis
  var y = d3.scaleLinear()
    .domain([0, 25])
    .range([ chartHeight - chartMargin.bottom, chartMargin.top]);
  svg.append("g")
    .text("Poverty")
    .call(d3.axisLeft(y));


d3.csv("/assets/data/data.csv").then(function(data) {

	console.log(data);
let circleGroup = chartGroup.selectAll('dot')
		  .data(data)
		  .enter()
		  .append('circle')
		  .attr('cx', function(d) {return x(d.obesity);})
		  .attr('cy', function(d) {return y(d.poverty);})
		  .attr('r', 15)
		  .style("fill", "#69b3a2")
var circleLabels = chartGroup.selectAll(null).data(data).enter().append("text");

	circleLabels
	  .attr("x", function(d) {
	    return x(d.obesity);
	  })
	  .attr("y", function(d) {
	    return y(d.poverty);
	  })
	  .text(function(d) {
	    return d.abbr;
	  })
	  .attr("font-family", "sans-serif")
	  .attr("font-size", "10px")
	  .attr("text-anchor", "middle")
	  .attr("fill", "white");

	// Create axes labels
	chartGroup.append("text")
	  	  .attr("transform", "rotate(-90)")
	  	  .attr("y", 0 - chartMargin.left + 40)
	  	  .attr("x", 0 - (chartHeight / 2))
	  	  .attr("dy", "1em")
	  	  .attr("class", "axisText")
	  	  .text("Poverty");

	chartGroup.append("text")
	  	  .attr("transform", `translate(${width / 2}, ${chartHeight + chartMargin.top + 30})`)
	  	  .attr("class", "axisText")
	  	  .text("Obesity");
	//chartGroup.selectAll('text')
	//	  .data(data)
	//	  .enter()
	//	  .append('text')
	//	  .style('textanchor', 'middle')
	//	  .text(function(d) { return d.abbr};)

});

